            </column>
            <column name="disciplina_curricular_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="disciplina_curricular_id, planos_curricular_id" tableName="rel_disciplina_curricular__planos_curricular"/>
