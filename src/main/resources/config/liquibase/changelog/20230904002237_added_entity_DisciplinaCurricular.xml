            <column name="componente_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="regime_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="disciplina_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="referencia_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20230904002237-1-relations" author="jhipster">

