                <constraints nullable="true" />
            </column>
            <column name="is_terminal" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="media_para_exame" type="double">
                <constraints nullable="false" />
            </column>
            <column name="media_para_recurso" type="double">
                <constraints nullable="false" />
