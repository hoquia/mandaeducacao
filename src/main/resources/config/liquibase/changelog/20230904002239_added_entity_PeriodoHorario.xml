            </column>
            <column name="inicio" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="fim" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="turno_id" type="bigint">
                <constraints nullable="false" />
            </column>
