            <column name="cursos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="campo_actuacao_dissertacao_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="campo_actuacao_dissertacao_id, cursos_id" tableName="rel_campo_actuacao_dissertacao__cursos"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
