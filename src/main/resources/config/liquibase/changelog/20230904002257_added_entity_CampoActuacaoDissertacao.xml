    <!--
        Added the entity CampoActuacaoDissertacao.
    -->
    <changeSet id="20230904002257-1" author="jhipster">
        <createTable tableName="campo_actuacao_dissertacao">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_campo_actuacao_dissertacao__nome" />
            </column>
            <column name="descricao" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="is_activo" type="boolean">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20230904002257-1-relations" author="jhipster">

