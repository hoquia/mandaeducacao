<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Turma.
    -->
    <changeSet id="20230904002240-1" author="jhipster">
        <createTable tableName="turma">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chave_composta" type="varchar(255)">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_turma__chave_composta" />
            </column>
            <column name="tipo_turma" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="sala" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="descricao" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_turma__descricao" />
            </column>
            <column name="lotacao" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="confirmado" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="abertura" type="date">
                <constraints nullable="true" />
            </column>
            <column name="encerramento" type="date">
                <constraints nullable="true" />
            </column>
            <column name="criterio_descricao" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="criterio_ordenacao_numero" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="faz_inscricao_depois_matricula" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="is_disponivel" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="utilizador_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="referencia_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="plano_curricular_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="turno_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
