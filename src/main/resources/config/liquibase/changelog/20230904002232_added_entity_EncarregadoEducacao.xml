            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_encarregado_educacao__email" />
            </column>
            <column name="residencia" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="endereco_trabalho" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="renda_mensal" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="empresa_trabalho" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="hash" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="grau_parentesco_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="tipo_documento_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="profissao_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
