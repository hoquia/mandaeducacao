            </column>
            <column name="nif" type="varchar(255)">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_encarregado_educacao__nif" />
            </column>
            <column name="sexo" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="documento_numero" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_encarregado_educacao__documento_numero" />
