            <column name="estado_disciplina_curricular_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="estado_disciplina_curricular_id, disciplinas_curriculars_id" tableName="rel_estado_disciplina_curricular__disciplinas_curriculars"/>
