            </column>
            <column name="bibliografia" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="observacao" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="pdf" type="${blobType}">
                <constraints nullable="true" />
            </column>
            <column name="pdf_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="video" type="${blobType}">
                <constraints nullable="true" />
            </column>
            <column name="video_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="audio" type="${blobType}">
                <constraints nullable="true" />
            </column>
            <column name="audio_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="plano_aula_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
