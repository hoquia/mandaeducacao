            </column>
            <column name="recursos_ensino" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="titulo_actividade" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="actividades_docente" type="${clobType}">
